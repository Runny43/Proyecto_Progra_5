
@{
	ViewData["Title"] = "Generar Código EasyPass";
}

<h2>@ViewData["Title"]</h2>

<!-- Botón para generar el código -->
<form method="post" action="@Url.Action("Generate", "QR")">
	<button type="submit" class="btn btn-primary">Generar Código</button>
</form>

<!-- Mostrar el QR si está disponible -->
@if (ViewBag.QRCode != null)
{
	<h3>Código EasyPass Generado:</h3>
	<img src="@Url.Content(ViewBag.QRCode)" alt="QR Code" />
}