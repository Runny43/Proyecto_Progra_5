@{
	ViewData["Title"] = "Condominiums Page";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fs-4 text-primary fw-semibold">
            <i class="bi bi-building me-2"></i>Condominium List -
            <span class="text-secondary ">Welcome @ViewBag.User.Name</span>
        </h2>
        <div class="btn-group">
            <a class="btn btn-outline-primary" asp-controller="Root" asp-action="Main">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <a class="btn btn-primary" asp-controller="Condo" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Add Condominium
            </a>
            <a class="btn btn-primary" asp-controller="Condo" asp-action="CondoDetails">
                <i class="bi bi-plus-circle"></i> Edit Condominium
            </a>
        </div>
    </div>

    <hr class="border-2 border-top border-primary opacity-75" />
    <div class="row g-4 justify-content-center">
        @foreach (var condominium in ViewBag.Condominium)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition-all">
                    <div class="card-img-top overflow-hidden" style="height: 250px;">
                        <img src="@condominium.Photo" class="img-fluid w-100 h-100 object-fit-cover"
                             alt="@condominium.Name" onerror="this.src='https://via.placeholder.com/400x250'">
                    </div>
                    <div class="card-body">
                        <h3 class="h5 card-title text-center text-truncate">@condominium.Name</h3>
                        <div class="d-flex justify-content-between mt-3">
                            <span class="badge bg-info text-dark">
                                <i class="bi bi-house-door"></i> @condominium.Count Units
                            </span>
                            <span class="badge bg-light text-dark">
                                <i class="bi bi-geo-alt"></i> @condominium.Address
                            </span>
                        </div>
                    </div>
                    
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-image: url('https://s0.smartresize.com/wallpaper/751/96/HD-wallpaper-px-digital-art-japan-minimalism-simple-background-sun-trees-video-games-star-wars-fotografia-neon-ilustracion-de-arbol-fondos-de-pantalla-simples-minimalist-japanese-art.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
        margin: 0;
    }

    .container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .hover-shadow {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .object-fit-cover {
        object-fit: cover;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }
</style>
