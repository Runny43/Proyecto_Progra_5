
@{
	ViewData["Title"] = "Edit Security Profile";
}

<div class="container mt-4">
	<a class="btn btn-primary" asp-area="" asp-controller="Security" asp-action="IndexSecurity">Back</a>
	<hr />

	<div class="text-center">
		<div class="container mt-5">
			<div class="row justify-content-center">
				<div class="col-md-4">
					<div class="card shadow-lg p-4">
						<form method="post" asp-controller="Security" asp-action="EditSecurityAction">
							<div class="mb-3">
								<label for="txtUuid" class="form-label">UUID</label>
								<input type="text" id="txtUuid" name="txtUuid" class="form-control" value="@ViewBag.Security.uuid" required readonly />
							</div>
							<div class="mb-3">
								<label for="txtCard" class="form-label">Cedula de identidad</label>
								<input type="text" id="txtCard" name="txtCard" class="form-control" value="@ViewBag.Security.id_Card" required readonly />
							</div>
							<div class="mb-3">
								<label for="txtEmail" class="form-label">Email</label>
								<input type="email" id="txtEmail" name="txtEmail" class="form-control" value="@ViewBag.Security.Email" required readonly />
							</div>
							<div class="mb-3">
								<label for="displayName" class="form-label">Name & Last Name</label>
								<input type="text" id="displayName" name="displayName" class="form-control" value="@ViewBag.Security.Name" required readonly />
							</div>

							<div class="mb-3">
								<select id="selCondo" name="selCondo" class="form-select" aria-label="Select the condominium">
									@foreach (var condo in ViewBag.CondoList)
									{
										<option value="@condo.Name" data-count="@condo.Count">@condo.Name</option>
									}
								</select>
							</div>
							<button type="submit" class="btn btn-primary w-100">Update</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


