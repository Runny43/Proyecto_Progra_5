﻿@{
    ViewData["Title"] = "Login Page";
}
<div class="container mt-4">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h2 class="fs-4 text-primary fw-semibold">
			<i class="bi bi-person" me-2"></i>Owner Main Page -
			<span class="text-info">Welcome @ViewBag.User.Name</span>
		</h2>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-4">
			<div class="card shadow-lg p-4">
                <a asp-action="Index" asp-controller="Owner" class="btn btn-custom-1 btn-lg">Create new visit</a>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card shadow-lg p-4">
                <a asp-action="Visits" asp-controller="Owner" class="btn btn-custom-2 btn-lg">See favorite and normal visits</a>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card shadow-lg p-4">
                <a asp-action="Generate" asp-controller="QR" class="btn btn-custom-1 btn-lg">Easy Pass</a>
			</div>
		</div>
	</div>
</div>

<style>
    body {
        background-image: url('https://s0.smartresize.com/wallpaper/751/96/HD-wallpaper-px-digital-art-japan-minimalism-simple-background-sun-trees-video-games-star-wars-fotografia-neon-ilustracion-de-arbol-fondos-de-pantalla-simples-minimalist-japanese-art.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
        margin: 0;
    }

    .container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .shadow-lg {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-custom-1 {
        background-color: #de9559;
        border-color: #de9559;
        color: #ffffff;
    }

        .btn-custom-1:hover {
            background-color: #b3723d;
            border-color: #b3723d;
        }

    .btn-custom-2 {
        background-color: #5254b3;
        border-color: #5254b3;
        color: #ffffff;
    }

        .btn-custom-2:hover {
            background-color: #3f419e;
            border-color: #3f419e;
        }
</style>